<?xml version="1.0" ?>
<IKSolverDemoConfig>
  <IKSolver Name="MySolver">
    <MaxIterations>1</MaxIterations>
  </IKSolver>

  <UnconstrainedEndPoseProblem Name="MyProblem">
    <PlanningScene>
      <Scene>
        <JointGroup>manipulator</JointGroup>
        <URDF>{exotica_examples}/resources/robots/iiwa7.urdf</URDF>
        <SRDF>{exotica_examples}/resources/robots/iiwa7.srdf</SRDF>
      </Scene>
    </PlanningScene>

    <Maps>
      <PointToLine Name="p2l" EndPoint="0.75 0 0.5" Infinite="1" Visualise="1">
        <EndEffector>
          <Frame Link="iiwa_link_7" LinkOffset="0 0 0 0.7071 0  0.7071 0" Base="world_frame"/>
          <Frame Link="iiwa_link_7" LinkOffset="0 0 1"/>
        </EndEffector>
      </PointToLine>
    </Maps>

    <Cost>
      <Task Task="p2l" Rho="1"/>
    </Cost>

    <!-- <NominalState>0 0 0 0 0 0 0</NominalState> -->
    <W> 7 6 5 4 3 2 1 </W>
  </UnconstrainedEndPoseProblem>
</IKSolverDemoConfig>
