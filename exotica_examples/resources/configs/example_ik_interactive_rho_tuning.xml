<?xml version="1.0" ?>
<IKSolverDemoConfig>
  <IKSolver Name="MySolver" MaxIterations="100" />

  <UnconstrainedEndPoseProblem Name="My Problem">
    <PlanningScene>
      <Scene>
        <JointGroup>manipulator</JointGroup>
        <URDF>{exotica_examples}/resources/robots/iiwa7.urdf</URDF>
        <SRDF>{exotica_examples}/resources/robots/iiwa7.srdf</SRDF>
        <Links>
          <Link Name="EffPoint" Parent="iiwa_link_7" Transform="0 0 0.5"/>
          <Link Name="LookAtTarget" Transform="1 1 2"/>
        </Links>
      </Scene>
    </PlanningScene>

    <Maps>
      <LookAt Name="LookAt">
        <EndEffector>
          <!-- EndEffector #0 => Frame on robot to orient -->
          <Frame Link="EffPoint" Base="iiwa_link_7"/>
          <!-- EndEffector #1 => Target to look at, in relative frame of EffPoint -->
          <Frame Link="LookAtTarget" Base="iiwa_link_7"/>
          <!-- EndEffector #2 => Target to look at, in world frame (convenience frame) -->
          <Frame Link="LookAtTarget"/>
        </EndEffector>
      </LookAt>

      <Distance Name="Distance">
        <EndEffector>
          <Frame Link="LookAtTarget" Base="EffPoint"/>
        </EndEffector>
      </Distance>
    </Maps>

    <Cost>
      <Task Task="LookAt" Rho="1"/>
      <Task Task="Distance" Rho="1"/>
    </Cost>

    <StartState>0 0 0 0 0 0 0</StartState>
    <W> 7 6 5 4 3 2 1 </W>
  </UnconstrainedEndPoseProblem>
</IKSolverDemoConfig>
